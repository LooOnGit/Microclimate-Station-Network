<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".ui.FarmFragment">


    <LinearLayout
        android:background="@color/bgRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNameFarm"
            android:text="Nông trại"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="25dp"
            android:fontFamily="@font/ptn777"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/lnTemp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameSensor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhiệt độ"
                android:layout_gravity="center"
                android:fontFamily="@font/ptn777"
                android:layout_marginTop="5dp"
                android:textColor="@color/text"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtValueSensor1"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_temperature">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnHum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameSensor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Độ ẩm"
                android:layout_gravity="center"
                android:fontFamily="@font/ptn777"
                android:layout_marginTop="5dp"
                android:textColor="@color/text"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtValueSensor2"
                    android:layout_gravity="center"
                    android:text="10 g/m³"
                    android:textSize="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_humidity">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/lnSal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameSensor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Độ mặn"
                android:layout_gravity="center"
                android:fontFamily="@font/ptn777"
                android:layout_marginTop="5dp"
                android:textColor="@color/text"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/txtValueSensor3"
                        android:text="10 g/m³"
                        android:textSize="25dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgFan"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_salinity" android:layout_width="0dp">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnFlow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameSensor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu lượng"
                android:layout_gravity="center"
                android:fontFamily="@font/ptn777"
                android:layout_marginTop="5dp"
                android:textColor="@color/text"
                android:textSize="15dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtValueSensor4"
                    android:layout_gravity="center"
                    android:text="10 g/m³"
                    android:textSize="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_flow">
                </ImageView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape">

        <TextView
            android:text="Ngày bắt đầu"
            android:textColor="@color/text"
            android:fontFamily="@font/ptn777"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="5">

            <TextView
                android:text="Ngày:"
                android:textColor="@color/text"
                android:fontFamily="@font/ptn777"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </TextView>


            <TextView
                android:id="@+id/txtStartDate"
                android:text="Start"
                android:fontFamily="@font/ptn777"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </TextView>

            <ImageView
                android:background="@drawable/ic_startday"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </ImageView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape">

        <TextView
            android:text="Ngày thu hoạch"
            android:textColor="@color/text"
            android:fontFamily="@font/ptn777"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="5">

            <TextView
                android:text="Ngày:"
                android:textColor="@color/text"
                android:fontFamily="@font/ptn777"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </TextView>


            <TextView
                android:id="@+id/txtHavestDate"
                android:text="Date"
                android:fontFamily="@font/ptn777"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </TextView>

            <ImageView
                android:background="@drawable/ic_calendar"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </ImageView>

        </LinearLayout>
    </LinearLayout>
